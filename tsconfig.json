{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "ES6",
    "sourceMap": true,
    "jsx": "react",
    "strict": true,
    "target": "ES5",
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "paths": {
      "shared/*": [
        "hbw/app/javascript/packs/hbw/components/shared/*"
      ],
      "messenger": [
        "app/javascript/utils/messenger"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "vendor",
    "public",
  ],
}
